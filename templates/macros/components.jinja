{% macro text_field(name, label, placeholder='', value='', required=False, disabled=False,
input_class='', container_class='') %}
<div class="flex flex-col gap-y-1 w-full {{ container_class }}">
	<label for="{{ name }}" class="block text-sm font-medium">{{
		label
	}}</label>
	<input
		type="text"
		id="{{ name }}"
		name="{{ name }}"
		placeholder="{{ placeholder }}"
		value="{{ value }}"
		{% if required %}
		required
		{% endif %}
		{% if disabled %}
		disabled
		{% endif %}
		class="bg-white text-black block px-2 py-1 disabled:bg-gray-100 border border-indigo-500 rounded-md shadow-sm transition-all duration-200 ease-in-out focus:outline-none focus:ring focus:ring-indigo-500 focus:ring-opacity-50 focus:border-indigo-500 {{ input_class }}"
	/>
</div>
{% endmacro %}

{% macro hidden_input(name, value) %}
    <input type="hidden" name="{{ name }}" class="hidden" value="{{ value }}" />
{% endmacro %}


{% macro btn(body='Submit', type='submit', adds='', additional_classes='') %}
<button class="bg-white border border-indigo-500 text-indigo-500 hover:bg-indigo-500 hover:text-white focus:outline-none focus:ring focus:ring-indigo-500 focus:ring-opacity-50 font-semibold py-1 px-3 rounded {{ additional_classes }}" type="{{ type }}" {{ adds }}>
	{{ body|safe }}
</button>
{% endmacro %}


{% macro anchor_btn(body='Submit', url='#', additional_classes='') %}
<a href="{{ url }}" class="bg-white border border-indigo-500 text-indigo-500 hover:bg-indigo-500 hover:text-white focus:outline-none focus:ring focus:ring-indigo-500 focus:ring-opacity-50 font-semibold py-1 px-3 rounded {{ additional_classes }}">
	{{ body|safe }}
</a>
{% endmacro %}


{# --- ALERT --- #}
{% macro alert(message, type='error', additional_classes='') %}
    {% if type == 'error' %}
        <div class="flex items-center justify-between w-full py-1 px-2 border border-red-700/50 text-red-700 bg-red-100 rounded-lg  {{ additional_classes }}" role="alert">
            <span>{{ message }}</span>
            <button type="button" class="text-red-700 hover:text-red-900" aria-label="Close" onclick="this.parentElement.style.display='none'">
            &times;
            </button>
        </div>
    {% elif type == 'warning' %}
        <div class="flex items-center justify-between w-full py-1 px-2 border border-yellow-700/50 text-yellow-700 bg-yellow-100 rounded-lg  {{ additional_classes }}" role="alert">
            <span>{{ message }}</span>
            <button type="button" class="text-yellow-700 hover:text-yellow-900" aria-label="Close" onclick="this.parentElement.style.display='none'">
            &times;
            </button>
        </div>
    {% else %}
        <div class="flex items-center justify-between w-full py-1 px-2 border border-green-700/50 text-green-700 bg-green-100 rounded-lg  {{ additional_classes }}" role="alert">
            <span>{{ message }}</span>
            <button type="button" class="text-green-700 hover:text-green-900" aria-label="Close" onclick="this.parentElement.style.display='none'">
            &times;
            </button>
        </div>
    {% endif %}
{% endmacro %}
{# --- END ALERT --- #}